@model News.Models.LoginRegisterForm

<div class="panel panel-default">
    <div class="row">
        <div class="col-lg-12">
            <div class="card flex-row">
                <div class="card-body">
                    <h1 class="panel-title">
                        News Application
                    </h1>
                </div>
                <button class="btn btn-outline-dark btn-lg mr-1" type="button"
                        data-type="Login"
                        data-toggle="modal"
                        data-target="#login-modal">
                    LOGIN
                </button>
                <button class="btn btn-outline-dark btn-lg" type="button"
                        data-type="Signup"
                        data-toggle="modal"
                        data-target="#login-modal">
                    SIGN UP
                </button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="popover-title">
                        What Interests You?
                    </h2>
                </div>
                <div class="card-body">
                    <div class="tag-btn-group d-flex flex-column" data-toggle="buttons">
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Technology
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Politics
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #World
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Pets
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Trending
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Sports
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9 d-flex flex-column">
            <h2 class="pt-2">Headlines / Cards</h2>
            <div class="col-sm-10 d-md-flex flex-column">
                <div class="card mb-3">
                    <div class="row no-gutters flex-wrap-reverse">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">News Article Title</h5>
                                <p class="card-subtitle mb-2 text-muted">Publisher</p>
                                <p class="card-text"> Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum  Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum</p>
                                <div class="badge badge-primary">#Technology</div>
                                <div class="badge badge-primary">#World</div>
                                <div class="badge badge-primary">#Trending</div>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <img src="~/images/wireframe.png" class="card-img pr-1" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Published : 24/7/2019</small>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="row no-gutters flex-wrap-reverse">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">News Article Title 2</h5>
                                <p class="card-subtitle mb-2 text-muted">Publisher</p>
                                <p class="card-text"> Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum  Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum</p>
                                <div class="badge badge-primary">#Sports</div>
                                <div class="badge badge-primary">#World</div>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center">
                            <img src="~/images/google_news.png" class="card-img pr-1" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Published : 24/7/2019</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Login modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="login-modal-title">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Index" asp-controller="Form" method="POST" id="login-form">
                    <div class="form-group">
                        <label asp-for="LoginUserEmail" class="col-form-label"></label>
                        <input asp-for="LoginUserEmail" type="text" class="form-control" required
                               pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+(?:[A-Z]{2}|com|org|net|gov|mil|biz|info|mobi|name|aero|jobs|museum)\b">
                    </div>
                    <div class="form-group">
                        <label asp-for="LoginPassword" class="col-form-label"></label>
                        <input asp-for="LoginPassword" type="password" class="form-control" required>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary ml-2 btn-lg">Login</button>
                    </div>
                </form>
                <form asp-action="Index" asp-controller="Form" method="POST" id="signup-form" style="display: none">
                    <div class="form-group">
                        <label asp-for="RegisterEmail" class="col-form-label">Email</label>
                        <input asp-for="RegisterEmail" type="text" class="form-control" required
                               pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+(?:[A-Z]{2}|com|org|net|gov|mil|biz|info|mobi|name|aero|jobs|museum)\b">
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterUsername" class="col-form-label">Username</label>
                        <input asp-for="RegisterUsername" type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterPassword" class="col-form-label">Password</label>
                        <input asp-for="RegisterPassword" type="password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterPasswordCheck" class="col-form-label">Repeat password</label>
                        <input asp-for="RegisterPasswordCheck" type="password" class="form-control" required>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary ml-2 btn-lg">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

