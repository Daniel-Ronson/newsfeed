@model News.Models.LoginForm

<div class="panel panel-default">
    <div class="row">
        <div class="col-lg-12">
            <div class="card flex-row">
                <div class="card-body">
                    <h1 class="panel-title">
                        News Application
                    </h1>
                </div>
                <button class="btn btn-outline-dark btn-lg mr-1" type="button"
                        data-type="Login"
                        data-toggle="modal"
                        data-target="#login-modal">
                    LOGIN
                </button>
                <button class="btn btn-outline-dark btn-lg" type="button"
                        data-type="Signup"
                        data-toggle="modal"
                        data-target="#login-modal">
                    SIGN UP
                </button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h2 class="popover-title">
                        What Interests You?
                    </h2>
                </div>
                <div class="card-body">
                    <div class="tag-btn-group d-flex flex-column" data-toggle="buttons">
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Technology
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Politics
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #World
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Pets
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Trending
                        </label>
                        <label class="btn btn-outline-dark tag-btn btn-lg">
                            <input type="checkbox" checked autocomplete="off"> #Sports
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9 d-flex flex-column">
            <h2 class="pt-2">Headlines / Cards</h2>
            <div id="cardView" class="col-sm-10 d-md-flex flex-column">
            </div>
        </div>
    </div>
</div>


<!-- Login modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="login-modal-title">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Index" asp-controller="Form" method="POST" id="login-form">
                    <div class="form-group">
                        <label asp-for="userEmail" class="col-form-label"></label>
                        <input asp-for="userEmail" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="col-form-label"></label>
                        <input asp-for="password" type="password" class="form-control">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary ml-2 btn-lg">Login</button>
                    </div>
                </form>
                <form method="POST" id="signup-form" style="display: none">
                    <div class="form-group">
                        <label for="email" class="col-form-label">Email</label>
                        <input type="text" name="email" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="username" class="col-form-label">Username</label>
                        <input type="text" name="username" class="form-control" id="username">
                    </div>
                    <div class="form-group">
                        <label for="signup-password" class="col-form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="signup-password">
                    </div>
                    <div class="form-group">
                        <label for="password-check" class="col-form-label">Repeat password</label>
                        <input type="password" name="passwordCheck" class="form-control" id="password-check">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary ml-2 btn-lg">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

